//exercicio 3

function operaçoes(soma, subtraçao, multiplicaçao, divisao){
    n1 = Number(30);
    n2 = Number(3);
    return console.log("Numeros inseridos:", n1, "e", n2,
    "soma", n1 + n2,
    "subtraçao", n1 - n2,
    "multiplicaçao", n1 * n2,
    "divisão", n1 / n2);

}
console.log(operaçoes());
